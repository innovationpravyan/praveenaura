# Environment Configuration for Aurame Beauty App

# App Environment
APP_ENV=development
APP_NAME=Aurame
APP_VERSION=1.0.0

# Firebase Configuration
FIREBASE_PROJECT_ID=aurame-beauty-app
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_APP_ID=your_firebase_app_id_here
FIREBASE_SENDER_ID=your_firebase_sender_id_here

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_1234567890
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Google Maps Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# API Configuration
API_BASE_URL=https://api.auramebeauty.com
API_TIMEOUT=30000

# Default Location (Varanasi, India)
DEFAULT_LATITUDE=25.3176
DEFAULT_LONGITUDE=82.9739
DEFAULT_CITY=Varanasi
DEFAULT_STATE=Uttar Pradesh

# App Features
ENABLE_HOME_SERVICE=true
ENABLE_NOTIFICATIONS=true
ENABLE_GUEST_MODE=true
ENABLE_ANALYTICS=false

# Debug Settings
DEBUG_MODE=true
LOG_LEVEL=debug

# Social Media Links
FACEBOOK_URL=https://facebook.com/auramebeauty
INSTAGRAM_URL=https://instagram.com/auramebeauty
TWITTER_URL=https://twitter.com/auramebeauty
WEBSITE_URL=https://auramebeauty.com

# Support
SUPPORT_EMAIL=support@auramebeauty.com
SUPPORT_PHONE=+91-9876543210
PRIVACY_POLICY_URL=https://auramebeauty.com/privacy
TERMS_URL=https://auramebeauty.com/terms

# Business Hours
BUSINESS_START_TIME=09:00
BUSINESS_END_TIME=21:00
SERVICE_SLOT_DURATION=30

# Booking Configuration
MIN_BOOKING_ADVANCE_HOURS=1
MAX_BOOKING_ADVANCE_DAYS=30
CANCELLATION_WINDOW_HOURS=24

# Payment Configuration
MIN_PAYMENT_AMOUNT=100
MAX_PAYMENT_AMOUNT=50000
PAYMENT_TIMEOUT_MINUTES=15

# Notification Configuration
NOTIFICATION_SOUND=default
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_ICON=app_icon

# Cache Configuration
IMAGE_CACHE_DURATION_DAYS=7
DATA_CACHE_DURATION_HOURS=1
